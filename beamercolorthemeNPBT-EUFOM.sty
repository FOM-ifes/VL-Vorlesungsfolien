\message{Starting 'beamecolorthemeNPBT-EUFOM' ------------------------------}

\mode<presentation>
% ---------------------------------------------------------------------------

% ---------------------------------------------------------------------------
% Set Path to images
% ---------------------------------------------------------------------------
\def\imagepath{images/NPBT-eufom-}
\updateNPBTimagespaths{}
\updateNPBTimages{}

% ---------------------------------------------------------------------------
% Define Colors
% ---------------------------------------------------------------------------
%
% base colors
%
\definecolor{eufomred}{HTML}{8E000F}
\definecolor{eufomgray}{HTML}{717D87}

%
% named colors
%
\definecolor{EUFOM}{HTML}{8E000F}
\definecolor{EUFOMTitelColor}{HTML}{8E000F}
\definecolor{EUFOMBoldColor}{HTML}{99008A} %???
\definecolor{EUFOMInstituteColor}{HTML}{3A1518}
\definecolor{EUFOMSubTitelColor}{HTML}{4CB7AD}
\definecolor{EUFOMFirmColor}{HTML}{262626} 
\definecolor{EUFOMForgroundColor}{HTML}{262626}
\definecolor{EUFOMBackgroundColor}{HTML}{3A1518} 
\definecolor{EUFOMWhiteColor}{HTML}{FFFFFF}
\definecolor{EUFOMFrametitelColor}{HTML}{A10010}
\definecolor{EUFOMFrametitelInverseColor}{HTML}{FFFFFF}
\definecolor{EUFOMAuthorColor}{HTML}{1C1C1C}
\definecolor{EUFOMSubTitelColor}{HTML}{4CB7AD}
\definecolor{EUFOMSectionHeadlineColor}{HTML}{717D87}
\definecolor{EUFOMSectionTitelColor}{HTML}{A10010}% sollte eigentlich sein: {00998A}
\definecolor{EUFOMSectionNumberColor}{HTML}{32373D}% oder: {262927}
\definecolor{EUFOMNearBlack}{HTML}{102030}
\definecolor{FOMTOCSectionTitleColor}{HTML}{EEEEEE}
\definecolor{FOMTOCBackgroundColor}{HTML}{8E000F} % eufomred


% ---------------------------------------------------------------------------
\setbeamercolor*{structure}{fg=eufomred, bg=softred}
\setbeamercolor{structure}{fg=EUFOM}

% ---------------------------------------------------------------------------
% Colors & Fonts setting for: titlepage
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{title in titlepage}{fg=EUFOMTitelColor}
\setbeamercolor{institute in titlepage}{fg=EUFOMInstituteColor}
\setbeamercolor{author in titlepage}{fg=EUFOMAuthorColor}
\setbeamercolor{subtitle in titlepage}{fg=EUFOMSubTitelColor}
\setbeamercolor{firm in titlepage}{fg=EUFOMFirmColor}
%
% fonts
%
\setbeamerfont{institute in titlepage}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{firm in titlepage}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{title in titlepage}{size=\LARGE, family=\sffamily, series=\bfseries}
\setbeamerfont{subtitle in titlepage}{size=\LARGE, family=\sffamily, series=\bfseries}
\setbeamerfont{author in titlepage}{size=\large, family=\sffamily, series=\bfseries}

% ---------------------------------------------------------------------------
% Colors & Fonts setting for: part page
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{part title}{fg=EUFOMTitelColor}
%
% fonts
%

% ---------------------------------------------------------------------------
% Colors & Font setting for: section page
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{section name}{fg=EUFOMTitelColor} % **FIX ME** Needed?
%\setbeamercolor{section title}{fg=EUFOMSectionTitelColor}
\setbeamercolor{section title}{fg=EUFOMTitelColor}
\setbeamercolor{sectionnumber title}{fg=EUFOMSectionNumberColor}
%
% fonts
%
\setbeamerfont{section name}{size=\Large, family=\sffamily, series=\bfseries}
\setbeamerfont{section title}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{sectionnumber title}{size=\huge, family=\sffamily, series=\bfseries}


% ---------------------------------------------------------------------------
% Colors & Font setting for: subsection title page
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{subsection name}{fg=EUFOMTitelColor}
\setbeamercolor{subsection title}{fg=EUFOMTitelColor}
%
% fonts
%
\setbeamerfont{subsection name}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{subsection title}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{subsectionnumber title}{size=\Large, family=\sffamily, series=\bfseries}

% ---------------------------------------------------------------------------
% Colors & Font setting for: header
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{myheader}{fg=darkdray}
\setbeamercolor{section in head}{parent=myheader}
\setbeamercolor{subsection in head}{parent=myheader}
\setbeamercolor{section in head}{parent=myheader, fg=EUFOMSectionHeadlineColor}
\setbeamercolor{frametitle in head}{bg=EUFOMWhiteColor, fg=EUFOMFrametitelColor}
\setbeamercolor{frametitle in head exercise}{bg=EUFOMFrametitelColor, fg=EUFOMFrametitelInverseColor}
%
% fonts
%
\setbeamerfont{frametitle in head}{size=\Large, family=\sffamily, series=\bfseries}
\setbeamerfont{section in head}{size=\large, family=\sffamily, series=\mdseries}
\setbeamerfont{section in head exercise}{parent=section in head}
\setbeamercolor{myheader}{fg=darkgray}

% ---------------------------------------------------------------------------
% Colors & Font setting for: footline
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{footline}{fg=eufomgray, bg=white}
\setbeamercolor{author in footline}{parent=footline}
\setbeamercolor{date in footline}{parent=footline}
\setbeamercolor{seperator in footline}{parent=footline}
\setbeamercolor{title in footline}{parent=footline}
\setbeamercolor{number in footline}{parent=footline}
%
% fonts
%
\setbeamerfont{footline}{size=\scriptsize, family=\sffamily, series=\mdseries}
\setbeamerfont{author in footline}{parent=footline}
\setbeamerfont{date in footline}{parent=footline}
\setbeamerfont{separator in footline}{parent=footline}
\setbeamerfont{title in footline}{parent=footline}
\setbeamerfont{number in footline}{parent=footline}

% ---------------------------------------------------------------------------
% Colors & Font setting for: note page
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{note}{fg=EUFOMNearBlack, bg=EUFOM!10}
\setbeamercolor{note page}{fg=EUFOMNearBlack, bg=EUFOM!3}
\setbeamercolor{note date}{fg=EUFOM!10}
\setbeamercolor{note title}{fg=EUFOMNearBlack, bg=EUFOM!10}
%
% fonts
%
\setbeamerfont{note}{family=\sffamily, series=\mdseries}
\setbeamerfont{note date}{family=\ttfamily, series=\mdseries}
\setbeamerfont{note title}{parent=note}

% ---------------------------------------------------------------------------
% Colors & Font setting for: cemph and cstrong
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{color emph}{fg=EUFOMBoldColor!75}
\setbeamercolor{color strong}{fg=EUFOMBoldColor}
%
% fonts
%
\setbeamerfont{color emph}{series=\bfseries}
\setbeamerfont{color strong}{series=\bfseries}

\renewcommand*{\cemph}{\usebeamerfont{color emph}\usebeamercolor[fg]{color emph}}
\renewcommand*{\cstrong}{\usebeamerfont{color strong}\usebeamercolor[fg]{color strong}}

% ---------------------------------------------------------------------------
\mode<all>
\message{Ending 'beamercolorthemeNPBT-EUFOM' --------------------------------}
